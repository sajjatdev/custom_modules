<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="customer_code" inherit_id="web.external_layout_boxed">
        <xpath expr="//div[hasclass('o_boxed_header')]" position="replace">
            <div class="o_boxed_header">
                <div class="row mb8">
                    <div  t-attf-class="#{'col-auto col-3 mw-100' if report_type != 'html' else 'col'} mb-2">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                    </div>
                    <div  t-attf-class="#{'col-auto' if report_type != 'html' else 'col'} mb-2">
                        <div class="company-info" style="text-align: right;">
                            <h4 class="text-dark mb-0">
                                <strong t-esc="o.company_id.name" />
                            </h4>
                            <t t-if="o.company_id.street">
                                <p class="mb-0" t-esc="o.company_id.street" />
                            </t>
                            <p class="mb-0">
                                <t t-if="o.company_id.city">
                                    <span t-esc="o.company_id.city" />,
                                </t>
                                <t t-if="o.company_id.state_id.name">
                                    <span t-esc="o.company_id.state_id.name" />
                                </t>
                                <t t-if="o.company_id.zip">
                                    <span t-esc="o.company_id.zip" />,
                                </t>
                                <t t-if="o.company_id.country_id.name">
                                    <span t-esc="o.company_id.country_id.name" />
                                </t>
                            </p>
                            <t t-if="o.company_id.website">
                                <p class="mb-0">
                                    <strong>Website:</strong>
                                    <a t-att-href="'http://' + o.company_id.website" t-esc="o.company_id.website" />
                                </p>
                            </t>
                            <t t-if="o.company_id.phone">
                                <p class="mb-0">
                                    <strong>Phone:</strong>
                                    <span t-esc="o.company_id.phone" />
                                </p>
                            </t>
                            <t t-if="o.company_id.email">
                                <p  class="mb-0">
                                    <strong>Email:</strong>
                                    <span t-esc="o.company_id.email" />
                                </p>
                            </t>
                        </div>
                    </div>
                    <div  t-attf-class="#{'col-auto' if report_type != 'html' else 'col'} mb-2">
                        <div class="client-info" style="text-align: right;">
                            <!-- Client is a Company -->
                            <h4 class="text-dark mb-0">
                                <strong t-esc="o.partner_id.name" />
                            </h4>
                            <t t-if="o.partner_id.street">
                                <p  class="mb-0">
                                    <strong t-esc="o.partner_id.street" />
                                </p>
                            </t>
                            <p  class="mb-0">
                                <strong>
                                    <t t-if="o.partner_id.city">
                                        <span t-esc="o.partner_id.city" />,
                                    </t>
                                    <t t-if="o.partner_id.state_id.name">
                                        <span t-esc="o.partner_id.state_id.name" />
                                    </t>
                                    <t t-if="o.partner_id.zip">
                                        <span t-esc="o.partner_id.zip" />,
                                    </t>
                                    <t t-if="o.partner_id.country_id.name">
                                        <span t-esc="o.partner_id.country_id.name" />
                                    </t>
                                </strong>
                            </p>
                            <t t-if="o.company_id.website">
                                <p class="mb-0">
                                    <strong>Website:</strong>
                                    <a t-att-href="'http://' + o.company_id.website" t-esc="o.company_id.website" />
                                </p>
                            </t>
                            <t t-if="o.partner_id.phone">
                                <p  class="mb-0">
                                    <strong>Phone:</strong>
                                    <span t-esc="o.partner_id.phone" />
                                </p>
                            </t>
                            <t t-if="o.partner_id.email">
                                <p  class="mb-0">
                                    <strong>Email:</strong>
                                    <span t-esc="o.partner_id.email" />
                                </p>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
    <!-- Address Display -->
    <template id="address_remove" name="address_remove" inherit_id="web.address_layout">
        <xpath expr="//div[contains(@class, 'address') and contains(@class, 'row')]" position="replace">
            <div t-if="address" class="address row ">

            </div>
        </xpath>
    </template>
    <!-- Layout Template Inherit -->
    <template id="layout_template_id" name="layout_template_id" inherit_id="l10n_gcc_invoice.arabic_english_invoice">
        <xpath expr="//div[hasclass('page')]" position="replace">
            <div class="page">
                <div class="row">
                    <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col'} mb-3">
                        <div t-if="o">
                            <p class="text-start" style="font-size:20px;color:red;font-weight: bold;margin-bottom:0px;" t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Tax Invoice</p>
                            <p style="font-size:20px;color:red;font-weight: bold;" t-elif="o.move_type == 'out_invoice' and o.state == 'draft'">
                                 Draft Invoice
                            </p>
                            <p class="text-start" style="font-size:20px;color:red;font-weight: bold;margin-bottom:0px;" t-elif="o.move_type == 'out_invoice' and o.state == 'cancel'">
                                Cancelled Invoice
                            </p>
                            <p class="text-start" style="font-size:20px;color:red;font-weight: bold;margin-bottom:0px;" t-elif="o.move_type == 'out_refund' and o.state == 'posted'">
                                Credit Note
                            </p>
                            <p class="text-start" style="font-size:20px;color:red;font-weight: bold;margin-bottom:0px;" t-elif="o.move_type == 'out_refund' and o.state == 'draft'">
                                Draft Credit Note
                            </p>
                            <p class="text-start" style="font-size:20px;color:red;font-weight: bold;margin-bottom:0px;" t-elif="o.move_type == 'out_refund' and o.state == 'cancel'">
                                Cancelled Credit Note
                            </p>
                            <p class="text-start" style="font-size:20px;color:red;font-weight: bold;margin-bottom:0px;" t-elif="o.move_type == 'in_refund'">
                                Vendor Credit Note
                            </p>
                            <p class="text-start" style="font-size:20px;color:red;font-weight: bold;margin-bottom:0px;" t-elif="o.move_type == 'in_invoice'">
                                Vendor Bill
                            </p>
                            <img t-if="o.l10n_sa_qr_code_str" t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', quote_plus(o.l10n_sa_qr_code_str), 150, 150)"  width="100px" height="100px"/>
                            <p class="text-start" style="font-size:19px;font-weight: bold;" t-field="o.name"/>
                        </div>
                    </div>
                    <div t-if="o" t-attf-class="#{'col-auto mw-100' if report_type != 'html' else 'col'} mb-2">
                        <div  class="row " t-if="o.invoice_date" name="invoice_date">
                            <div class="col-4">
                                <strong style="white-space:nowrap">
                                            Invoice Date:
                                </strong>
                            </div>
                            <div class="col-4 align-items-center">
                                <span style="white-space:nowrap" t-field="o.invoice_date"/>
                            </div>
                            <div class="col-4">
                                <strong style="white-space:nowrap">
                                    :تاريخ الفاتورة                          
                                </strong>
                            </div>
                        </div>
                        <div class="row" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'"
                                            name="due_date">
                            <div class="col-4">
                                <strong style="white-space:nowrap">
                                            Due Date:
                                    </strong>
                            </div>
                            <div class="col-4 align-items-center">
                                <span style="white-space:nowrap" t-field="o.invoice_date_due"/>
                            </div>
                            <div class="col-4">
                                <strong style="white-space:nowrap">
                                            :تاريخ الاستحقاق
                                </strong>
                            </div>
                        </div>
                        <div class="row " t-if="o.delivery_date" name="delivery_date">
                            <div class="col-4">
                                <strong style="white-space:nowrap">
                                            Delivery Date:
                                </strong>
                            </div>
                            <div class="col-4  align-items-center">
                                <span style="white-space:nowrap" t-field="o.delivery_date"/>
                            </div>
                            <div class="col-4">
                                <strong style="white-space:nowrap">
                                           :تاريخ التوريد
                                </strong>
                            </div>
                        </div>
                        <div class="row " t-if="o.delivery_date" name="delivery_date">
                            <div class="col-4">
                                <strong style="white-space:nowrap">
                                            Source:
                                </strong>
                            </div>
                            <div class="col-4  align-items-center">
                                <span style="white-space:nowrap" t-field="o.invoice_origin"></span>
                            </div>
                            <div class="col-4">
                                <strong style="white-space:nowrap">
                                           :مصدر
                                </strong>
                            </div>
                        </div>
                    </div>
                </div>
                <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                <table class="table table-sm o_main_table" name="invoice_line_table">
                    <thead>
                        <tr>
                            <t t-set="colspan" t-value="6"/>
                            <th name="th_total" class="text-end bg-secondary-opacity" style="background-color: #e3e3e3;">
                                <span>
                                    السعر الاجمالي
                                </span>
                                <br/>
                                <span>
                                    Total Price
                                </span>
                            </th>
                            <th name="th_subtotal" class="text-end bg-secondary-opacity" style="background-color: #e3e3e3;">
                                <span>
                                    مبلغ
                                </span>
                                <br/>
                                <span>
                                    Amount
                                </span>
                            </th>
                            <th name="th_taxes"
                                class="text-end bg-secondary-opacity" style="background-color: #e3e3e3;">
                                <span>
                                    الضرائب
                                </span>
                                <br/>
                                <span>
                                    Taxes
                                </span>
                            </th>
                            <th name="th_price_unit" t-if="display_discount"
                                class="text-end bg-secondary-opacity" style="background-color: #e3e3e3;">
                                <span>
                                    خصم %
                                </span>
                                <br/>
                                <span>
                                    Disc.%
                                </span>
                                <t t-set="colspan" t-value="colspan+1"/>
                            </th>
                            <th name="th_priceunit"
                                class="text-end bg-secondary-opacity" style="background-color: #e3e3e3;">
                                <span>
                                    سعر الوحدة
                                </span>
                                <br/>
                                <span>
                                    Unit price
                                </span>
                            </th>
                            <th name="th_quantity" class="text-end bg-secondary-opacity" style="background-color: #e3e3e3;">
                                <span>
                                    الكمية
                                </span>
                                <br/>
                                <span>
                                    Quantity
                                </span>
                            </th>
                            <th name="th_source" class="d-none text-start bg-secondary-opacity" t-if="0" style="background-color: #e3e3e3;">
                                <span>
                                    المستند المصدر
                                </span>
                                <br/>
                                <span>
                                    Source Document
                                </span>
                            </th>
                            <th name="th_description" class="text-end bg-secondary-opacity" style="background-color: #e3e3e3;">
                                <span>
                                    الوصف
                                </span>
                                <br/>
                                <span>
                                    Description
                                </span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="lines"
                           t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                        <t t-foreach="lines" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                            <t t-set="current_total" t-value="current_subtotal + line.price_total" t-if="o.tax_calculation_rounding_method == 'round_per_line'"/>
                            <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="line.display_type not in ('line_note', 'line_section')" name="account_invoice_line_accountable">
                                    <td class="text-end">
                                        <span class="text-nowrap" t-field="line.price_total"/>
                                    </td>
                                    <td class="text-end">
                                        <span class="text-nowrap" t-field="line.price_subtotal"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-out="''.join(map(lambda x: (x.invoice_label or x.name).replace('Sales Tax', ''), line.tax_ids))" id="line_tax_ids"/>
                                    </td>
                                    <td t-if="display_discount"
                                        class="text-end">
                                        <span class="text-nowrap" t-field="line.discount"/>
                                    </td>
                                    <td class="text-end">
                                        <span class="text-nowrap" t-field="line.price_unit"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                    </td>
                                    <td name="account_invoice_line_name" class="text-end">
                                        <t t-if="line.product_id">
                                            <t t-set="arabic_name" t-value="line.with_context(lang='ar_001').product_id.display_name"/>
                                            <t t-set="english_name" t-value="line.with_context(lang='en_US').product_id.display_name"/>
                                            <span t-out="line.with_context(lang='ar_001').product_id.name"
                                                  t-options="{'widget': 'text'}"/>
                                            <t t-if="arabic_name != english_name">
                                                <br/>
                                                <span t-field="line.product_id.display_name"
                                                      t-options="{'widget': 'text'}"/>
                                            </t>
                                            <t t-if="line.name != english_name and line.name != arabic_name">
                                                <br/>
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </t>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                </t>
                            </tr>
                            <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-end">
                                    <td colspan="99">
                                        <strong class="mr16" style="display: inline-block">Subtotal/الإجمالي الفرعي</strong>
                                        <span
                                                t-out="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
                <div class="clearfix pt-4 pb-3" t-attf-style="#{'margin-left:200px;margin-right:200px;' if report_type != 'html' else 'margin-left:150px;margin-right:150px;'}">
                    <div class="row p-1">
                        <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col'}">
                            <strong>Subtotal</strong>
                        </div>
                        <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col'} lign-self-center text-center">
                            <span t-field="o.amount_untaxed"/>
                        </div>
                        <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col'} align-self-end text-end">
                            <strong> الإجمالي الفرعي</strong>
                        </div>
                    </div>
                    <hr style="padding:0.5px;background-color:block;margin:0px;opacity:1;"/>
                    <div class="row p-1">
                        <div  t-attf-class="#{'col-auto' if report_type != 'html' else 'col'}">
                            <strong>
                                <t t-set="tax_totals" t-value="o.tax_totals"/>
                                <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                                    <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                                    <!-- copy-pasted template "account.tax_groups_totals" with reversed columns order -->
                                    <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                                        <tr>
                                            <t t-if="tax_totals['display_tax_base']">
                                                <td>
                                                    <span t-esc="amount_by_group['tax_group_name']"/>
                                                    <span class="text-nowrap"> on
                                                        <t t-esc="amount_by_group['formatted_tax_group_base_amount']"/>
                                                    </span>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td >
                                                    <span class="text-nowrap" t-esc="amount_by_group['tax_group_name']"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                </t>
                            </strong>
                        </div>
                        <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col'} lign-self-center text-center">
                            <t t-set="tax_totals" t-value="o.tax_totals"/>
                            <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                                <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                                <!-- copy-pasted template "account.tax_groups_totals" with reversed columns order -->
                                <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                                    <tr>
                                        <t t-if="tax_totals['display_tax_base']">
                                            <td class="text-end o_price_total">
                                                <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                            </td>
                                            <td class="text-end">
                                                <span t-esc="amount_by_group['tax_group_name']"/>
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td class="text-end o_price_total">
                                                <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']" />
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </t>
                        </div>
                        <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col'} align-self-end text-end">
                            <strong>ضرائب القيمة المضافة</strong>
                        </div>
                    </div>
                    <hr style="padding:0.5px;background-color:block;margin:0px;opacity:1;"/>
                    <div class="row p-1">
                        <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col'}">
                            <strong>Total</strong>
                        </div>
                        <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col'} lign-self-center text-center">
                            <span t-field="o.amount_total"/>
                        </div>
                        <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col'} lign-self-end text-end">
                            <strong>المجموع</strong>
                        </div>
                    </div>
                    <hr style="padding:0.5px;background-color:block;margin:0px;opacity:1;"/>
                    <t t-if="print_with_payments">
                        <t t-if="o.payment_state != 'invoicing_legacy'">
                            <t t-set="payments_vals" t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []"/>
                            <t t-foreach="payments_vals" t-as="payment_vals">
                                <div class="row p-1">
                                    <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col'}">
                                        <strong>Paid on</strong>
                                        <t t-out="payment_vals['date']"/>
                                    </div>
                                    <div  t-attf-class="#{'col-auto' if report_type != 'html' else 'col'} lign-self-center text-center">
                                        <span t-out="payment_vals['amount']"
                                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </div>
                                    <div  t-attf-class="#{'col-auto' if report_type != 'html' else 'col'} lign-self-end text-end">
                                        <strong>دفعت على</strong>
                                    </div>
                                </div>
                                <hr style="padding:0.5px;background-color:block;margin:0px;opacity:1;"/>
                            </t>
                            <t t-if="len(payments_vals) > 0">
                                <div class="row p-1">
                                    <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col'}">
                                        <strong>Amount Due</strong>
                                    </div>
                                    <div  t-attf-class="#{'col-auto' if report_type != 'html' else 'col'} lign-self-center text-center">
                                        <span t-field="o.amount_residual"/>
                                    </div>
                                    <div  t-attf-class="#{'col-auto' if report_type != 'html' else 'col'} lign-self-end text-end">
                                        <strong>المبلغ المستحق</strong>
                                    </div>
                                </div>
                                <hr style="padding:0.5px;background-color:block;margin:0px;opacity:1;"/>
                            </t>
                        </t>
                    </t>
                </div>
                <br/>
                <br/>
                <br/>
                <div class="row">
                    <div  t-attf-class="#{'col-auto' if report_type != 'html' else 'col'}">
                        <div class="row">
                            <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col-4'}">
                                <h6>SALES:</h6>
                            </div>
                            <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col-4'} align-items-start text-start">
                                <t t-esc="o.invoice_user_id.name"/>
                            </div>
                        </div>
                        <div class="row">
                            <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col-4'}">
                                <h6>SIGNATURE:</h6>
                            </div>
                            <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col-2'} align-items-start">
                                <img t-if="o.company_id.signature" t-att-src="image_data_uri(o.company_id.signature)" alt="signature" width="100px"/>
                            </div>
                        </div>
                        <div class="row">
                            <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col-4'}">
                                <h6>CUSTOMER:</h6>
                            </div>
                            <div t-attf-class="#{'col-auto' if report_type != 'html' else 'col-4'} align-items-start">
                                <t t-esc="o.partner_id.name"/>
                            </div>
                        </div>
                    </div>
